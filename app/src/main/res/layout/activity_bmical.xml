<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bmical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:text="Enter the following details"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="56dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        />


    <EditText
        android:id="@+id/height"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter your height in metres"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="227dp"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/weight"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter your weight in kilograms"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="343dp"
        android:gravity="center"
        android:layout_below="@+id/height"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/setbmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="56dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"

        />
    <Button
        android:id="@+id/btnbmicalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:gravity="center"
        android:layout_below="@+id/setbmi"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/btnbmisubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:gravity="center"
        android:layout_below="@+id/btnbmicalculate"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnbmigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I dont know my values"
        android:gravity="center"
        android:layout_below="@+id/btnbmisubmit"
        android:layout_marginTop="10dp"

        />

</RelativeLayout>